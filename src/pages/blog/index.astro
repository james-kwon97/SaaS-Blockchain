import DefaultLayout from '../../layouts/Default.astro';
import { HeaderSection } from '../../sections/Header';
import { CutCornerButton } from '../../components/CutCornerButton';
import { Hexagon } from '../../components/Hexagon';
---

<DefaultLayout>
  <HeaderSection client:load />
  <section class="py-60 relative">
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <Hexagon size={800} />
    </div>
    <div class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2">
      <Hexagon size={1200} />
    </div>
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <p class="uppercase font-extrabold text-center text-zinc-500 tracking-wider">Latest Post</p>
        <h1 class="font-heading font-black text-7xl text-center mt-4">
          Regulatory Challenges Facing Blockchain
        </h1>
        <p class="text-center text-2xl mt-6 text-zinc-400 max-w-xl mx-auto">
          Understanding the regulatory landscape surrounding Blockchain and what it means for the
          future of this technology.
        </p>
        <div class="flex justify-center mt-10">
          <CutCornerButton>Read More</CutCornerButton>
        </div>
      </div>
    </div>
  </section>
  <div>
    {/* Blog posts */}
  </div>
</DefaultLayout>
