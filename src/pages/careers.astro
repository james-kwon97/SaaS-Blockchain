---
import InteriorHero from '../components/InteriorHero.astro';
import DefaultLayout from '../layouts/Default.astro';
---

<DefaultLayout>
  <InteriorHero>
    <p class="uppercase font-extra-bold text-center text-zinc-500 tracking-wider">Join the team</p>
    <h1 class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-center mt-4">
      We are hiring
    </h1>
    <p class="text-center text-xl md:text-2xl mt-6 max-w-xl mx-auto text-zinc-400">
      We are always looking for talented individuals passionate about building BlockChain products
      that make a difference.
    </p>
  </InteriorHero>
</DefaultLayout>
